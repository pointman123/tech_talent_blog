<%= form_with(model: @blog_post, local: true) do |form| %>

   

	<div class="form-group">
	<%= form.text_field :title, class: "form-control", placeholder: "Your Title Goes Here" %>
		</div>
	<div class="form-group hidden">
	<%= form.number_field :user_id, value: current_user.id %>
		</div>
	<div class="form-group">
	<%= form.text_area :blog_entry, class: "form-control",rows: 12, placeholder: "Tell us something." %>
		</div>


	<div class="form-group hidden">
		<strong>Uploaded Proflile Pic:</strong>
		<%= form.file_field :avatar, value: current_user.avatar %>
	</div>

	<div class="actions">
		<%= form.submit "Submit", class: "btn btn-primary" %>
	</div>
<% end %>

<%= form_with(model: @comment, local: true) do |form| %>
<%= @comment.errors.any? %>
<div class= 'error_explanation'>
	<h2><%= pluralize(@comment.errors.count, "error") %>
	prohibited this comment from being saved: </h2>
	<ul>   <% @comment.errors.full_messages.each do |message| %>
		<li> <%= message %> </li>
	  </ul>
	</div>
<% end %>

<div class='form-group hidden'>
	<% form.number_field :user_id, value: current_user.id %>
	</div>

<div class="form-group">
	<%= form.text_area :comment, rows: 4, class: "form-control", placeholder: "Your comment goes here." %>
</div>

		<div class="form-group hidden">
	<%= form.number_field :blog_post_id, value: @blog_post.id %>
		</div>



<div class="actions">
	<%= form.submit "Set Comment", class: "btn btn-default"%>
		</div>
<% end %>









